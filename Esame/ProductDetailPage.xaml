<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esame.ProductDetailPage"
             Title="Dettagli Prodotto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Image x:Name="ProductImage"
                   HeightRequest="300"
                   Aspect="AspectFit"/>

            <Label x:Name="ProductTitle"
                   FontSize="24"
                   FontAttributes="Bold"/>

            <Label x:Name="ProductPrice"
                   FontSize="20"
                   TextColor="Yellow"/>

            <Label x:Name="ProductCategory"
                   FontSize="16"
                   TextColor="Gray"/>

            <Label x:Name="ProductDescription"
                   FontSize="16"/>

            <Button Text="Aggiungi al carrello"
            BackgroundColor="Green"
            TextColor="White"
            FontSize="20"
            Clicked="AddToCart_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
